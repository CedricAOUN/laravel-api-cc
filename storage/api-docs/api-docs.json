{
    "openapi": "3.0.0",
    "info": {
        "title": "My First API",
        "description": "API de gestion de livres",
        "version": "0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api/v1",
            "description": "API URL"
        }
    ],
    "paths": {
        "/books": {
            "get": {
                "tags": [
                    "Books"
                ],
                "operationId": "getBooks",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcceptJson"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of books",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BookListWithPagination"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Books"
                ],
                "operationId": "createBook",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcceptJson"
                    },
                    {
                        "$ref": "#/components/parameters/AuthToken"
                    }
                ],
                "requestBody": {
                    "$ref": "#/components/requestBodies/Book"
                },
                "responses": {
                    "201": {
                        "description": "Book created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BookResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationErrorMessage"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UnauthenticatedMessage"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/books/{id}": {
            "get": {
                "tags": [
                    "Books"
                ],
                "operationId": "getSingleBook",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcceptJson"
                    },
                    {
                        "$ref": "#/components/parameters/BookId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Book created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BookResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/NotFoundMessage"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "Books"
                ],
                "operationId": "updateBook",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcceptJson"
                    },
                    {
                        "$ref": "#/components/parameters/BookId"
                    },
                    {
                        "$ref": "#/components/parameters/AuthToken"
                    }
                ],
                "requestBody": {
                    "$ref": "#/components/requestBodies/Book"
                },
                "responses": {
                    "200": {
                        "description": "Book updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BookResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationErrorMessage"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UnauthenticatedMessage"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Books"
                ],
                "operationId": "deleteBook",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcceptJson"
                    },
                    {
                        "$ref": "#/components/parameters/BookId"
                    },
                    {
                        "$ref": "#/components/parameters/AuthToken"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Book deleted successfully"
                    },
                    "401": {
                        "description": "Unauthenticated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UnauthenticatedMessage"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/users/register": {
            "post": {
                "tags": [
                    "Users"
                ],
                "operationId": "registerUser",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcceptJson"
                    }
                ],
                "requestBody": {
                    "$ref": "#/components/requestBodies/UserRegistration"
                },
                "responses": {
                    "201": {
                        "description": "User created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserRegisterResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationErrorMessage"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict - User already exists",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AlreadyExistsMessage"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "operationId": "loginUser",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcceptJson"
                    }
                ],
                "requestBody": {
                    "$ref": "#/components/requestBodies/UserLogin"
                },
                "responses": {
                    "200": {
                        "description": "User logged in successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserLoginResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/InvalidCredentialsMessage"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationErrorMessage"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/logout": {
            "post": {
                "tags": [
                    "Users"
                ],
                "operationId": "logoutUser",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcceptJson"
                    },
                    {
                        "$ref": "#/components/parameters/AuthToken"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User logged out successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LogoutSuccessMessage"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UnauthenticatedMessage"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "BookResponse": {
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Test book"
                    },
                    "author": {
                        "type": "string",
                        "example": "Test author"
                    },
                    "summary": {
                        "type": "string",
                        "example": "Test summary of the book"
                    },
                    "isbn": {
                        "type": "string",
                        "example": "1234567890123"
                    },
                    "_links": {
                        "properties": {
                            "self": {
                                "type": "string",
                                "example": "http://localhost:8000/api/v1/books/1"
                            },
                            "update": {
                                "type": "string",
                                "example": "http://localhost:8000/api/v1/books/1"
                            },
                            "delete": {
                                "type": "string",
                                "example": "http://localhost:8000/api/v1/books/1"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "BookListWithPagination": {
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/BookResponse"
                        }
                    },
                    "links": {
                        "properties": {
                            "first": {
                                "type": "string",
                                "example": "http://localhost:8000/api/v1/books?page=1"
                            },
                            "last": {
                                "type": "string",
                                "example": "http://localhost:8000/api/v1/books?page=10"
                            },
                            "prev": {
                                "type": "string",
                                "example": "http://localhost:8000/api/v1/books?page=1"
                            },
                            "next": {
                                "type": "string",
                                "example": "http://localhost:8000/api/v1/books?page=3"
                            }
                        },
                        "type": "object"
                    },
                    "meta": {
                        "properties": {
                            "current_page": {
                                "type": "integer",
                                "example": 2
                            },
                            "from": {
                                "type": "integer",
                                "example": 11
                            },
                            "last_page": {
                                "type": "integer",
                                "example": 10
                            },
                            "path": {
                                "type": "string",
                                "example": "http://localhost:8000/api/v1/books"
                            },
                            "per_page": {
                                "type": "integer",
                                "example": 10
                            },
                            "to": {
                                "type": "integer",
                                "example": 20
                            },
                            "total": {
                                "type": "integer",
                                "example": 100
                            },
                            "links": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "url": {
                                            "type": "string",
                                            "example": "http://localhost:8000/api/v1/books?page=1"
                                        },
                                        "label": {
                                            "type": "string",
                                            "example": "&laquo; Previous"
                                        },
                                        "active": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "page": {
                                            "type": "integer",
                                            "example": 3
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "GenericMessage": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Generic response message"
                    }
                },
                "type": "object"
            },
            "UnauthenticatedMessage": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Unauthenticated"
                    }
                },
                "type": "object"
            },
            "NoContentMessage": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "No content"
                    }
                },
                "type": "object"
            },
            "InvalidCredentialsMessage": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Invalid credentials"
                    }
                },
                "type": "object"
            },
            "AlreadyExistsMessage": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "The email has already been taken"
                    },
                    "errors": {
                        "properties": {
                            "email": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "The email has already been taken"
                                }
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "ValidationErrorMessage": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Validation error"
                    },
                    "errors": {
                        "properties": {
                            "field_name": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "Error message for the field"
                                }
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "LogoutSuccessMessage": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "User logged out successfully"
                    }
                },
                "type": "object"
            },
            "NotFoundMessage": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Not found"
                    }
                },
                "type": "object"
            },
            "UserResponse": {
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Test name"
                    },
                    "email": {
                        "type": "string",
                        "example": "test2@example.com"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-01T00:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-01T00:00:00Z"
                    },
                    "email_verified_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-01T00:00:00Z"
                    },
                    "id": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "UserRegisterResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "User registered successfully"
                    },
                    "user": {
                        "$ref": "#/components/schemas/UserResponse"
                    }
                },
                "type": "object"
            },
            "UserLoginResponse": {
                "properties": {
                    "user": {
                        "$ref": "#/components/schemas/UserResponse"
                    },
                    "access_token": {
                        "type": "string",
                        "example": "{token}"
                    }
                },
                "type": "object"
            }
        },
        "parameters": {
            "AcceptJson": {
                "name": "Accept",
                "in": "header",
                "required": true,
                "schema": {
                    "type": "string",
                    "default": "application/json"
                }
            },
            "AuthToken": {
                "name": "Authorization",
                "in": "header",
                "description": "Bearer token for authentication",
                "required": true,
                "schema": {
                    "type": "string",
                    "example": "Bearer {token}"
                }
            },
            "BookId": {
                "name": "id",
                "in": "path",
                "description": "Book ID",
                "required": true,
                "schema": {
                    "type": "integer"
                }
            }
        },
        "requestBodies": {
            "Book": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "example": "Test book"
                                },
                                "author": {
                                    "type": "string",
                                    "example": "Test author"
                                },
                                "summary": {
                                    "type": "string",
                                    "example": "Test summary of the book"
                                },
                                "isbn": {
                                    "type": "string",
                                    "example": "1234567890123"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "UserRegistration": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "example": "Test name"
                                },
                                "email": {
                                    "type": "string",
                                    "example": "test2@example.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "password"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "UserLogin": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "test2@example.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "password"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Books",
            "description": "Books"
        },
        {
            "name": "Users",
            "description": "Users"
        }
    ]
}